
<label for="cat_name"> Name </label>
<input type="text" name="cat[name]" id="cat_name" value="<%= @cat.name %>" >
<br>

<label> Sex: </label>
<input type="radio" name = "cat[sex]" id="cat_sex_male" value = "M" checked="<%= @cat.sex == "M" %>">
<label for="cat_sex_male"> Male </label>

<input type="radio" name = "cat[sex]" id="cat_sex_female" value = "F" checked="<%= @cat.sex == "F" %>">
<label for="cat_sex_female"> Female </label>
<br>

<label for="cat_color"> Color </label>
<select name="cat[color]" id="cat_color"  >

  <option value =""> Please Select a Color </option>
  <% Cat::VALID_COLORS.each do |color| %>
    <option value=<%= color%> <%= 'selected' if @cat.color == color%>>
      <%= color.capitalize %>
    </option>
  <% end %>

</select>
<br>

<label for="cat_date"> Birth Date </label>
<input type="date" name="cat[birth_date]" id="cat_date" value="<%= @cat.birth_date %>" >
<br>

<label for="cat_description"> Cat's Description </label>
<textarea name="cat[description]" id="cat_description"> <%= @cat.description %> </textarea>
<br>
<input name="authenticity_token" type="hidden" value=<%=form_authenticity_token%>>
