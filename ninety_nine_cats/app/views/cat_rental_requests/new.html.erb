<h1> Request New Cat Rental </h1>

<form action="<%= cat_rental_requests_url %>" method="post">


  <label for="cat_name"> Cat </label>
  <select name="cat_rental_request[cat_id]" id="cat_name"  >
    <option value =""> Please Select a Cat to Rent </option>
    <% Cat.all.each do |cat| %>
    <option value=<%= cat.id%> <%='selected' if @cat_rental_request.cat_id == cat.id %> >
      <%= cat.name %>
    </option>
    <% end %>
  </select>
  <br>

  <label for="start_date"> Start Date </label>
  <input type="date" name="cat_rental_request[start_date]" id="start_date" value=<%= @cat_rental_request.start_date %> >
  <br>

  <label for="end_date"> End Date </label>
  <input type="date" name = "cat_rental_request[end_date]" id="end_date" value=<%= @cat_rental_request.end_date %> >
  <br>

  <input type="submit" value="Submit Request">
  <input name="authenticity_token" type="hidden" value=<%=form_authenticity_token%>>


</form>
